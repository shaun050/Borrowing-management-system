<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Equipment For Issue</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">Equipment Name</th>
        <th scope="col">Equipment ID</th>
        <th scope="col">Quantity</th>
        <th scope="col" class="text-end">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% equipments.forEach(element => { %>
        <tr class="align-middle">
          <td><%= element.equipName %></td>
          <td><%= element.equipID %></td>
          <td><%= element.quan %></td>
          <td class="text-end">
            <div class="d-flex flex-row justify-content-end gap-2">
              <a href="/borrow/<%= element._id %>" type="button" class="btn btn-success btn-small">
                <i class="bi bi-person-add"></i> Issue
              </a>
              <a href="/return/<%= element._id %>" type="button" class="btn btn-primary btn-small">
                <i class="bi bi-person-dash"></i> Return
              </a>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<% if (equipments.length > 0) { %>
  <nav aria-label="Dashboard Pagination">
    <ul class="pagination justify-content-center mt-5">
      <% if (current == 1) { %>
        <li class="page-item disabled"><a href="#" class="page-link">First</a></li>
      <% } else { %>
        <li class="page-item"><a href="/issue?page=1" class="page-link">First</a></li>
      <% } %>

      <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
      <% if(i !== 1) { %>
        <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
      <% } %>

      <% for(; i <= (Number(current) + 4) && i <= pages; i++ ) { %>
        <% if (i == current) { %>
          <li class="page-item disabled"><a href="#" class="page-link"><%= i %></a></li>
        <% } else { %>
          <li class="page-item"><a href="/issue?page=<%= i %>" class="page-link"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
          <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
        <% } %>
      <% } %>

      <% if (current == pages) { %>
        <li class="page-item disabled"><a href="#" class="page-link">Last</a></li>
      <% } else { %>
        <li class="page-item"><a href="/issue?page=<%= pages %>" class="page-link">Last</a></li>
      <% } %>
    </ul>
  </nav>
<% } %>
